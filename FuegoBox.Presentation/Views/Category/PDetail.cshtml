@model FuegoBox.Presentation.Models.ProductDetail
@{
    ViewBag.Title = "PDetail";
}
<div class="container">
    <div class="row p-detail">
            <div class="col-md-4">
                <img class="img-fluid" src="@Model.ImageURL" width="250" height="250" />
            </div>
            <div class="col-md-6">
                <h2 class="title"><b>Name:</b> @Model.Name</h2>
                <p><b>Description:</b> @Model.Description</p>
                <h5><b>Category:</b> @Model.CatName</h5>
                <h6><b>Price: &#8377;</b> @Model.ListingPrice</h6>
                <h6><b>Discount Price: &#8377;</b> @Model.Discount</h6>
                <h6><b>@(Model.Inventory - Model.QuantitySold)</b> left in stock.</h6>
                @using (Html.BeginForm("AddToCart", "Cart", new { ProductID = Model.ID, Inventory = Model.Inventory, OrderLimit = Model.OrderLimit }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    foreach (var Variant in Model.Variants)
                    {
                        <img src="@Variant.image" height="100" width="100" />
                        <select>
                            <option value=@Variant.Variant_Value1>@Variant.Variant_Property: @Variant.Variant_Value1</option>
                            <option value=@Variant.ListingPrice>ListingPrice: @Variant.ListingPrice</option>
                            <option value="@Variant.Discount">Discount:@Variant.Discount</option>
                            <option value="left in stock">@(Variant.Inventory - Variant.QuantitySold) Left in stock.</option>
                        </select>
                    }

                    <button class="btn btn-block btn-primary" type="submit">Add To Cart</button>
                }
                </div>
        </div>
    </div>