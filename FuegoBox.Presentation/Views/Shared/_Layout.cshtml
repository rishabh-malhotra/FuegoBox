<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/icon.css">
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>

<body>
    <div style="height:30px">
        <nav class="navbar navbar-fixed-top" style="height:80px;background-color:gainsboro">
            <div class="navbar-form navbar-left ">
                <h2 id="fuego">FuegoBox</h2>

                @using (Html.BeginForm("SearchResults", "Category", FormMethod.Get))
                {
                    <div class="input-group" style="margin-left:200px;margin-top:-80px">
                        <input type="text" name="SearchString" class="form-control" placeholder="Search" style="width:300px">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                }
                </div>

                <div class="container ">
                    <ul class="nav navbar-nav navbar-right" style="margin-top:20px">
                        <li><span class="glyphicon glyphicon-heart"></span>@Html.ActionLink("Home", "Index", "Home")</li>
                        @if (Session["UserID"] != null)
                        {
                            <li><i class="glyphicon glyphicon-log-out"></i>@Html.ActionLink("Logout", "Logout", "Login")</li>
                            <li><h4 style="color:white">@Session["name"]</h4></li>
                        }



                        else
                        {
                            <li><i class="glyphicon glyphicon-log-in"></i>@Html.ActionLink("Login", "Index", "Login")</li>
                            <li><i class="glyphicon glyphicon-user"></i>@Html.ActionLink("Register", "Index", "Register")</li>
                        }

                    </ul>
                </div>
</nav>
    </div>
    <div style="height:100px;background-color:whitesmoke">
           
        <ul class="nav navbar-nav" style="height:80px;font-size:20px;">
            <li style="margin-left:20px;padding:25px"><i class="glyphicon glyphicon-book"></i>@Html.ActionLink("Book", "Book", "Category")</li>
            <li style="padding:25px"><i class="glyphicon glyphicon-time"></i>@Html.ActionLink("Watches", "Watches", "Category")</li>
            <li style="padding:25px"><i class="glyphicon glyphicon-briefcase"></i>@Html.ActionLink("Clothing", "Clothing", "Category")</li>
            <li style="padding:25px"><i class="glyphicon glyphicon-off"></i>@Html.ActionLink("Television", "Television", "Category")</li>
            <li style="padding:25px"><i class="glyphicon glyphicon-phone"></i>@Html.ActionLink("Mobile", "Mobile", "Category")</li>
            <li style="padding:25px"><i class="glyphicon glyphicon-star"></i>@Html.ActionLink("Footwear", "Footwear", "Category")</li>
        </ul>
    </div>
    <div class="container body-content" style="height:80px">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now - My Fuego Site</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
