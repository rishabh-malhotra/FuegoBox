<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/icon.css">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr") 
</head>
<body>
    <div style="height:30px">
        <nav class="navbar navbar-fixed-top bg-light" style="height:80px;">
            <h2 id="fuego"><a href="@Url.Action("Index", "Home")">FuegoBox</a></h2>
            <div class="input-group style=" margin-left:200px;margin-top:-80px"">
                @using (Html.BeginForm("SearchResult", "Category", FormMethod.Get))
                {
                    <div class="form-group">
                        <input type="search" class="form-control search" placeholder="Search" name="SearchString">
                        <button class="btn btn-primary submit-search text-center" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </div>
                }
            </div>
            
            <div class="container">
                <ul class="navbar-nav navbar-right" style="margin-top:20px">


                    <li><i class="fa fa-heart" aria-hidden="true"></i>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Session["UserID"] != null)
                    {
                        <li><i class="fa fa-sign-out" aria-hidden="true"></i>@Html.ActionLink("Logout", "Logout", "Login")</li>
                        <li><h4 style="color:white">@Session["name"]</h4></li>
                    }
                    else
                    {

                        <li><i class="fa fa-sign-in" aria-hidden="true"></i>@Html.ActionLink("Login", "Index", "Login")</li>
                        <li><i class="fa fa-user" aria-hidden="true"></i>@Html.ActionLink("Register", "Index", "Register")</li>
                    }

                </ul>
            </div>
        </nav>

    </div>
    <div style="height:100px;background-color:whitesmoke">

        <ul class="nav navbar-nav" style="height:80px;font-size:20px;">
            
            <li><a href="@Url.Action(" ViewProductCategory", "Category" , new { CategoryName="Book" })">Books</a></li>
            <li><a href="@Url.Action("ViewProductCategory", "Category", new { CategoryName = "Watch" })">Watches</a></li>
            <li><a href="@Url.Action("ViewProductCategory", "Category", new { CategoryName = "Clothing" })">Clothing</a></li>
            <li><a href="@Url.Action("ViewProductCategory", "Category", new { CategoryName = "Television" })">TV</a></li>
            <li><a href="@Url.Action("ViewProductCategory", "Category", new { CategoryName = "Mobile" })">Mobile</a></li>
            <li><a href="@Url.Action("ViewProductCategory", "Category", new { CategoryName = "Footwear" })">Footwear</a></li>

        </ul>
    </div>

    <div class="container body-content" style="height:80px">
        @RenderBody()
       <hr />

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>