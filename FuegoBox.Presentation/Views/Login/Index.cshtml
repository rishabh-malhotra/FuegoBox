@model FuegoBox.Presentation.Models.LoginModel
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container" style="margin-top:30px;background-color:unset">
        <div class="bg-light"> 
            <form class="well form-horizontal">
                <fieldset>
                    <div class="col-md-4 offset-4">
                        <h3 class="text-center">Login</h3>
                        <div class="form-group">
                            <br />
                            
                                <label class="col-md-4">E-Mail</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>&nbsp&nbsp&nbsp
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 ">Password</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>&nbsp&nbsp&nbsp
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <label class="col-md-3 control-label offset-1 text-center"></label>
                            <div class="col-md-3 offset-1">
                                <button type="submit" class="btn btn-warning text-center">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp Login <i class="fa fa-paper-plane" aria-hidden="true"></i>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                            </div>
                        </div>
                    </div>
                </fieldset>

            </form>
        </div>
    </div>
}
<p>
    @Html.ActionLink("Register as a new user", "../Register")
</p>




