@model FuegoBox.Presentation.Models.CategoryModel

@{
    ViewBag.Title = "Book";
}

<h2>Product @ViewBag.Title</h2>
<div>
    <hr />
    <dl class="dl-horizontal"></dl>
</div>
<div class="row row-pb-md">
    @foreach (var product in Model.Products)
    {
        <div class="col-md-3 col-lg-3 mb-4 text-center">
            <div class="product-entry border">
                <h2><a href="@Url.Action("PDetail", "Category", new { Name = product.Name})">@product.Name</a></h2>

            </div>
        </div>
    }
</div>

